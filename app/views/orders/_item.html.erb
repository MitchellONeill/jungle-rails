<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * quantity %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p style="font-size: small";>
      <%= product.description %>
      </p>
    </td>
    <td>
      <h4><%= number_to_currency(product.price) %></h4>
    </td>
    <td>
      <h4><%= quantity %></h4>
    </td>
    <td>
      <h4><%= number_to_currency(item_total) %><h4>
    </td>
  </tr>
<% end %>